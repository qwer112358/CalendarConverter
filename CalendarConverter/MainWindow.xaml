<Window x:Class="CalendarConverter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CalendarConverter"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Icon="calendar.ico"

        Title="Конвертор величин единиц календарного дня" Height="500" Width="800">

    <Grid Background="#008080">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <Button x:Name="btn1" Click="calendarConvertion" Content="Конвертер каленадря" Margin="5"></Button>
            <Button x:Name="btn2" Click="dateCalculator" Content="Калькулятор дат" Margin="5"></Button>
            <Button x:Name="btn3" Click="dayConvertion" Content="Конвертор единиц календаря" Margin="5"></Button>
        </StackPanel>

        <Frame Name="MainFrame" NavigationUIVisibility="Hidden" Grid.Row="1"></Frame>
    </Grid>
</Window>
