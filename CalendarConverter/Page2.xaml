<Page x:Class="CalendarConverter.Page2"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CalendarConverter"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page2">

    <Grid >
        <StackPanel Margin="20">
            <TextBlock Text="Введите дату:" FontWeight="Bold" FontSize="18" Margin="5" MinWidth="70"/>
            <DatePicker x:Name="datePicker" FontSize="18" Margin="5" MinWidth="70"/>
            <TextBlock Text="Введите количество дней:" FontWeight="Bold" FontSize="18" Margin="5" MinWidth="70"/>
            <TextBox x:Name="daysTextBox" FontSize="18" Margin="5" MinWidth="70"/>
            <Button Content="Добавить дней к дате" Click="AddDaysButton_Click" FontSize="18" Margin="5" MinWidth="70"/>
            <Button Content="Вычесть дни из даты" Click="SubtractDaysButton_Click" FontSize="18" Margin="5" MinWidth="70"/>
            <TextBlock Text="Результат:" FontWeight="Bold" FontSize="18" Margin="5" MinWidth="70"/>
            <TextBlock x:Name="resultTextBlock" FontWeight="Bold" FontSize="18" Margin="5" MinWidth="70"/>
        </StackPanel>
    </Grid>
</Page>
